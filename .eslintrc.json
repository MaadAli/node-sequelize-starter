{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:jest/all",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "root": true,
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "quote-props": ["error", "as-needed"],
        "no-console": "off",
        "camelcase": "off",
        "no-trailing-spaces": "error",
        "linebreak-style": 0,
        "comma-dangle": ["error", "never"],
        "max-len": [
            "error",
            {
              "code": 150,
              "ignoreComments": true,
              "ignoreTrailingComments": true,
              "ignoreUrls": true,
              "ignoreStrings": true,
              "ignoreTemplateLiterals": true
            }
          ]
    },
    "settings": {
        "import/resolver": {
          "alias": {
            "map": [
              ["@src", "./src"],
              ["@tests", "./tests"]
            ],
            "extensions": [".js"]
          }
        }
    }
}
